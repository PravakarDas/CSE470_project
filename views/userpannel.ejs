<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe Page</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
    />
    <style>
      body {
        font-family: "Helvetica Neue", sans-serif;
        background-color: #f4f4f4;
        color: #333;
      }
      .navigation-bar {
        background-color: #333;
        color: white;
      }
      .navigation-bar ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
      }
      .navigation-bar li {
        float: left;
      }
      .navigation-bar li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }
      .navigation-bar li a:hover,
      .navigation-bar .active a {
        background-color: #ddd;
        color: black;
      }
      .navigation-bar .underline {
        border-bottom: 2px solid white;
      }
      .sticky {
        position: sticky;
        top: 0;
        z-index: 100;
      }
      .post {
        margin: 20px auto;
        max-width: 600px;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
      }
      .post img {
        width: 100%;
        border-radius: 10px;
      }
      .title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
      }
      .bookmark,
      .copy-link {
        font-size: 20px;
        cursor: pointer;
      }
      .bookmark:hover,
      .copy-link:hover {
        color: #f5ac15;
      }
      .time,
      .ingredients,
      .description {
        margin-top: 10px;
      }
      .video-link {
        margin-top: 10px;
      }
      .rating {
        unicode-bidi: bidi-override;
        direction: rtl;
      }
      .rating > span {
        display: inline-block;
        position: relative;
        width: 1.1em;
      }
      .rating > span:hover,
      .rating > span:hover ~ span {
        color: #f5ac15;
        cursor: pointer;
      }
      .comment-box {
        margin-top: 20px;
      }
      textarea {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      a,
      .bookmark,
      .copy-link {
        transition: transform 0.2s;
      }
      a:hover,
      .bookmark:hover,
      .copy-link:hover {
        transform: scale(1.05);
      }
      /* Rating system modification */
      .rating {
        display: flex;
        justify-content: center;
        gap: 5px;
      }
      .rating button {
        background: none;
        border: none;
        font-size: 1.5em;
        cursor: pointer;
      }
      .rating button:hover {
        color: #f5ac15;
      }
      .rating-container {
        display: none;
        position: fixed;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        z-index: 1000;
      }
      .rating-container button {
        background: none;
        border: none;
        font-size: 1.5em;
        cursor: pointer;
      }
      .rating-container button:hover {
        color: #f5ac15;
      }
      /* Add a transition effect for all hoverable items */
      a,
      .bookmark,
      .copy-link,
      .rate-btn {
        transition: transform 0.2s;
      }
      a:hover,
      .bookmark:hover,
      .copy-link:hover,
      .rate-btn:hover {
        transform: scale(1.05);
      }
      .user-page-container {
        display: flex;
        margin: 20px;
      }
      .left-pane {
        flex: 2;
        padding: 20px;
      }
      .right-pane {
        flex: 1;
        padding: 20px;
        border-left: 2px solid rgba(221, 221, 221, 0.2); /* 20% opacity */
        background-color: rgba(255, 255, 255, 0.2); /* 20% opacity white */
      }

      .pane-section {
        background-color: white;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
      }
      .username {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
      }
      /* ... additional styles for animations and other elements ... */
    </style>
    <script>
      function copyLink() {
        var dummy = document.createElement("input"),
          text = window.location.href;
        document.body.appendChild(dummy);
        dummy.value = text;
        dummy.select();
        document.execCommand("copy");
        document.body.removeChild(dummy);
      }

      function showRating() {
        document.getElementById("ratingContainer").style.display = "block";
      }
      function rate(value) {
        alert("Thank You, Your valuable rate really matters!!");
        document.getElementById("ratingContainer").style.display = "none";
        // Here you can add code to handle the rating value, e.g., send it to a server
      }
    </script>
  </head>
  <body>
    <div class="navigation-bar sticky">
      <ul>
        <li class="active">
          <a href="/">Home<span class="underline"></span></a>
        </li>
        <li>
          <a href="#">Reservations<span class="underline"></span></a>
        </li>
        <li>
          <a href="/Menu">Menu<span class="underline"></span></a>
        </li>
        <li>
          <a href="#">Blog<span class="underline"></span></a>
        </li>
        <li>
          <a href="#">Features<span class="underline"></span></a>
        </li>
        <li>
          <a href="#">Shop<span class="underline"></span></a>
        </li>
        <li>
          <a href="#">Contact<span class="underline"></span></a>
        </li>
        <li>
          <a href="/logging">Sign Out<span class="underline"></span></a>
        </li>
      </ul>
    </div>

    <div class="user-page-container">
      <div class="left-pane">
        <!-- Bookmark Section -->
        <div class="pane-section">
          <h2>Bookmarked Content</h2>
          <!-- Placeholder for bookmarked content -->
          <p>No bookmarked content yet.</p>
        </div>

        <!-- Posted Content Section -->
        <div class="pane-section">
          <h2>Posted Content</h2>
          <!-- Placeholder for posted content -->
          <p>No posted content yet.</p>
        </div>
      </div>
      <div class="right-pane">
        <div class="pane-section">
          <% if (username) { %>
          <div class="username">
            <h2>Welcome, <%= username %></h2>
          </div>
          <% } else { %>
          <p>User information not available.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
